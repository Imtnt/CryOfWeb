{
	"compileOnSave": true,
	"compilerOptions": {
		"experimentalDecorators": true,
		"pretty": false,
		"module": "esnext",
		"target": "esnext",
		"noImplicitAny": true,
		"moduleResolution": "node",
		"declaration": false,
		"sourceMap": true,
		"outDir": "ts-out",
		"baseUrl": "..",
		"typeRoots": ["node_modules/@types"],
		"paths": {
			"*": [
				"node_modules/*",
				"src/types/*"
			]
		},
		"types": [
		],
		"alwaysStrict": true
	},
	"include": [
		"./src/**/*",
		"../lib/**/*"
	]
}